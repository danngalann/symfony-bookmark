{% extends 'base.html.twig' %}

{% block contenedor_principal %}
	{% for tipo, mensajes in app.flashes %}
		{% for mensaje in mensajes %}
			<div class="alert alert-{{tipo}} alert-dismissible fade show">{{mensaje}}
				<button class="close" data-dismiss='alert' aria-label='close'>X</button>
			</div>
		{% endfor %}
	{% endfor %}
	<form action="" method="post">
		<div class="form-group">
			<label for="nombre">Nombre</label>
			<input type="text" name="nombre" id="nombre" class="form-control" {# value="{{ categoria.nombre }}" #} placeholder="Nombre"/>
		</div>
		{# <div class="form-group">
			<label for="color">Color</label>
			<input type="text" name="color" id="color" class="form-control" value="{{ categoria.color }}" placeholder="Color"/>
		</div> #}
		<input type="hidden" name="_token" value="{{ csrf_token('categoria') }}"/>
		<button type="submit" class="btn btn-outline-success">Guardar</button>
	</form>

{% endblock %}
